{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        ".tsup/**"
      ],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "db:pull": {
      "dependsOn": ["^build"],
      "outputs": ["packages/supabase/migrations/**"]
    },
    "lint": {},
    "type-check": {},
    "test": {},
    "test:e2e": {}
  }
}