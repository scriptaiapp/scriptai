
{
  "name": "@repo/supabase",
  "version": "1.0.0",
  "description": "Shared Supabase config and CLI",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepare": "tsup",
    "supabase:dev": "pnpx supabase start",
    "supabase:init": "pnpx supabase init",
    "supabase:link": "pnpx supabase link --project-ref <your-project-ID>",
    "supabase:pull": "pnpx supabase db pull",
    "supabase:push": "pnpx supabase db push"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.76.1"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "tsup": "catalog:"
  }
}
